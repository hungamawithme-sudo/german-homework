<!-- JAVASCRIPT ---------------------- -->
<script>
function checkAudio() {
    let s1 = document.getElementById("a1").value.toLowerCase().trim();
    let s2 = document.getElementById("a2").value.toLowerCase().trim();
    if (s1 === "anna" && s2 === "deutschland") {
        document.getElementById("audioResult").innerHTML = "‚úî Richtig!";
        document.getElementById("audioResult").className = "correct";
    } else {
        document.getElementById("audioResult").innerHTML = "‚úò Falsch. Versuch es noch einmal.";
        document.getElementById("audioResult").className = "wrong";
    }
}

function checkVideo() {
    let s1 = document.getElementById("v1").value.toLowerCase().trim();
    let s2 = document.getElementById("v2").value.toLowerCase().trim();
    if (s1 === "deutsch" && s2 === "25") {
        document.getElementById("videoResult").innerHTML = "‚úî Richtig!";
        document.getElementById("videoResult").className = "correct";
    } else {
        document.getElementById("videoResult").innerHTML = "‚úò Falsch.";
        document.getElementById("videoResult").className = "wrong";
    }
}

function checkReading() {
    let r1 = document.getElementById("r1").value.toLowerCase().trim();
    let r2 = document.getElementById("r2").value.toLowerCase().trim();
    if (r1 === "berlin" && r2.includes("deutsch") && r2.includes("englisch")) {
        document.getElementById("readingResult").innerHTML = "‚úî Richtig!";
        document.getElementById("readingResult").className = "correct";
    } else {
        document.getElementById("readingResult").innerHTML = "‚úò Falsch.";
        document.getElementById("readingResult").className = "wrong";
    }
}

function checkExercises() {
    let ex1 = document.getElementById("ex1").value.toLowerCase().trim();
    let ex2 = document.getElementById("ex2").value;

    if (ex1 === "bin" && ex2 === "correct") {
        document.getElementById("exerciseResult").innerHTML = "‚úî Alles richtig!";
        document.getElementById("exerciseResult").className = "correct";
    } else {
        document.getElementById("exerciseResult").innerHTML = "‚úò Einige Antworten sind falsch.";
        document.getElementById("exerciseResult").className = "wrong";
    }
}
</script>

