<script>
function checkMatch() {
    // You will later give me the real correct answers
    let correct = ["A", "C", "B", "D"];  // example - replace later!

    let user = [
        document.getElementById("match1").value.toUpperCase(),
        document.getElementById("match2").value.toUpperCase(),
        document.getElementById("match3").value.toUpperCase(),
        document.getElementById("match4").value.toUpperCase()
    ];

    let score = 0;
    for (let i = 0; i < 4; i++) {
        if (user[i] === correct[i]) score++;
    }

    document.getElementById("matchResult").innerHTML =
        "Score: " + score + " / 4";
}
</script>
