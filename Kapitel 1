<script>
function checkC() {
    let correct = ["Sie", "du", "Sie", "du"];
    let user = [
        document.getElementById("c1").value,
        document.getElementById("c2").value,
        document.getElementById("c3").value,
        document.getElementById("c4").value
    ];

    let score = 0;
    for (let i = 0; i < 4; i++) if (user[i] === correct[i]) score++;

    document.getElementById("cResult").innerHTML =
        "Score: " + score + "/4";
}

function checkD() {
    let correct = ["Sie", "du", "Sie", "du"];
    let user = [
        d1.value.trim(),
        d2.value.trim(),
        d3.value.trim(),
        d4.value.trim()
    ];

    let score = 0;
    for (let i = 0; i < 4; i++) if (user[i].toLowerCase() === correct[i].toLowerCase()) score++;

    dResult.innerHTML = "Score: " + score + "/4";
}

function checkE() {
    let correct = ["ist", "ist", "sind", "bist"];
    let user = [
        e1.value.trim(),
        e2.value.trim(),
        e3.value.trim(),
        e4.value.trim()
    ];

    let score = 0;
    for (let i = 0; i < 4; i++) if (user[i].toLowerCase() === correct[i].toLowerCase()) score++;

    eResult.innerHTML = "Score: " + score + "/4";
}
</script>

