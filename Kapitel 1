<script>
function checkAudio() {
  let a1 = a1.value.toLowerCase().trim();
  let a2 = a2.value.toLowerCase().trim();

  if (a1 === "anna" && a2 === "deutschland") {
    audioResult.textContent = "Richtig!";
    audioResult.className = "correct";
  } else {
    audioResult.textContent = "Falsch. Versuche es nochmal.";
    audioResult.className = "wrong";
  }
}

function checkVideo() {
  if (v1.value.toLowerCase().trim() === "deutsch") {
    videoResult.textContent = "Richtig!";
    videoResult.className = "correct";
  } else {
    videoResult.textContent = "Falsch.";
    videoResult.className = "wrong";
  }
}

function checkExercises() {
  if (ex1.value.toLowerCase().trim() === "bin" && ex2.value === "correct") {
    exerciseResult.textContent = "Alles richtig!";
    exerciseResult.className = "correct";
  } else {
    exerciseResult.textContent = "Einige Antworten sind falsch.";
    exerciseResult.className = "wrong";
  }
}
</script>

